<div class="container">
  <a href="/">Return to Home</a>
   <form action="/edit/post/<%=@post.id%>/<%=@post.key%>" method="post">
    <ul class = "form_elements">
      <li>
        <label for ="category_id">Category:</label>
        <select name = "category_id">
          <%@list_all.each do |category|%>
            <option value="<%=category.id%>" <%="selected" if category.id==@post.category.id%>><%=category.name%></option>
          <%end%>
        </select>
      </li>
      <li>
        <label for ="category">Title:</label>
        <input type="text" name = "title" value="<%=@post.title%>">
      </li>
      <li>
        <label for ="price">Price:</label>
        <input type="number" name = "price"  pattern="[0-9]+([\.|,][0-9]+)?" step="0.01" value=<%=@post.price%>>
      </li>
      <li>
        <label for ="description">Description:</label>
        <textarea cols = "30" rows ="5" name = "description"><%=@post.description%></textarea>
      </li>
      <li>
        <label for ="email">Email:</label>
        <input type="text" name = "email" value=<%=@post.email%>>
      </li>
      <li>
        <input type="submit" value="Submit">
      </li>
    </ul>
 </form>
</div>
